<article class="activity last_actions with_footer">
<div class="inner">
  <header>
  <div class="left">
  <h2><%= t('.title') %></h2>
  </div>
  <div class="right">
    <ul class="switch">
      <li class="selected"><%= link_to t('.main_filters.more_recent'), '#', :class => 'more_recent' %></li>
      <li><%= link_to t('.main_filters.more_polemic'), '#', :class => 'more_polemic' %></li>
    </ul>

  </div>
  </header>

  <div class="left">

    <% @actions.first(4).each do |action| %>
      <div class="action <%= action.event_type %>">
        <%= render "shared/lists_elements/#{action.event_type}", :data => action.item %>
      </div>
    <% end %>

  </div>

  <div class="right">
    <ul class="selector">
      <li class="selected"><%= link_to t('.content_type_filters.all'), '#' %></li>
      <li><%= link_to t('.content_type_filters.news'), '#' %></li>
      <li><%= link_to t('.content_type_filters.politics_activity'), '#' %></li>
      <li><%= link_to t('.content_type_filters.questions'), '#' %></li>
      <li><%= link_to t('.content_type_filters.proposals'), '#' %></li>
      <li><%= link_to t('.content_type_filters.images'), '#' %></li>
      <li><%= link_to t('.content_type_filters.videos'), '#' %></li>
    </ul>
  </div>
</div>
<footer>
<div class="separator"></div>
<div class="inner">
  <div class="right">
    <%= link_to t('.more'), link_for_actions, :class => "right_arrow" %>
  </div>

</div>
</footer>
<div class="t"></div><div class="f"></div>
</article>
