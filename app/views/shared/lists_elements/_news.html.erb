<%= avatar data.area %>
<div class="content">
  <p><strong><%= link_to data.title, news_path(data.id) %></strong></p>
  <p class="excerpt"><%= strip_tags truncate(data.body.try(:strip), :length => 66)  %></p>
  <div class="footer">
    <span class="published_at">
      <%= raw t('.author', :time => distance_of_time_in_words_to_now(data.published_at)) %>
    </span>
    <% unless show_last_comments?(data) -%>
      &middot;
      <span class="comments"><%= link_to data.comments_count, news_path(data.id), :class => "comment-count" %></span>
    <% end -%>
    &middot;
    <%= render "/shared/inline_sharing" %>
  </div>
  <%= render 'shared/lists_elements/last_comments', :data => data %>
</div>
