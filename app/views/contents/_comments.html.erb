<div class="comments">
  <% if defined?(birdie) %>
    <div class="birdie"></div>
  <% end %>

  <div class="count"><%= t('.title', :count => @content.comments.count) %></div>
  <ul>
    <%= render "comment_list" %>

    <% if user_signed_in? %>
      <li class="comment">
      <%= form_for @content, :remote => true, :html => { :class => :add_comment } do |form| %>
        <%= form.fields_for :comments, @comment do |comments| %>
          <%= comments.hidden_field :user_id %>

          <%= avatar current_user %>

          <div class="textarea-comment placeholder">

            <%= comments.fields_for :comment_data do |comment_data| %>
              <%= comment_data.text_area :body, :id => :comment %>
              <span class="holder"><%= t(".answer_this.#{@content.class.to_s.downcase}") %></span>
            <% end %>

          </div>
        <% end %>
        <button type="submit" class="white_button blue right"><span><%= t('.new.submit') %></span></button>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
