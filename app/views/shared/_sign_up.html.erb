<h1><%= t('.new_in_irekia') %></h1>
<h4><%= t('.fill_in_your_data') %></h4>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.label :email %><br />
  <%= f.email_field :email %></p>

  <p><%= f.label :password %><br />
  <%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></p>

  <p><%= f.label :name %><br />
  <%= f.text_field :name %></p>

  <p><%= f.check_box :terms_of_service %><%= f.label :terms_of_service, raw(t('.accept_user_conditions', :terms_of_service_link => link_to(t('.use_conditions_link'), '#'))) %></p>

  <p><%= f.submit t('.sign_up') %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>
