<%= avatar data.author %>
<div class="content">
  <p class="title"><%= data.title %></p>
  <span class="author">
    <%= raw t('.author', :author => link_to(data.author.fullname, user_path(data.author.id)), :time => distance_of_time_in_words_to_now(data.published_at)) %>
  </span>
  &middot;
  <%= link_to t('shared.lists_elements.comments', :count => data.comments_count), event_path(data.id), :class => "comment-count", :anchor => "comments" %>
  &middot;
  <%= render "/shared/inline_sharing" %>
  <%= render 'shared/lists_elements/last_comments', :data => data %>
</div>
