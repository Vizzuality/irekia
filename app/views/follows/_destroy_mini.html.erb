<%
@follow        = follow if defined?(follow)
@follow_parent = follow_parent if defined?(follow_parent)
%>

<%= form_for [@follow_parent, @follow], :remote => true, :html => {:'data-type' => 'html', :method => :delete, :class => :follow, :id => nil } do |form| %>
  <%= hidden_field_tag :form_type, 'mini', :id => nil %>
  <%= form.hidden_field :id, :id => nil %>
  <%= content_tag :button, :type => 'submit', :class => "#{class_for_modal_login} add_person add_to_favorites", :'data-item-id' => @follow_parent.id do %>
    <%= raw (content_tag(:span, '', :class => 'add') + t('.stop_follow')) %>
  <% end -%>
<% end -%>
