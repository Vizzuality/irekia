<%= form_for @content, :remote => true, :html => {:'data-type' => 'html', :class => :remove} do |form| %>
  <%= hidden_field_tag :partial, 'tag' %>
  <%= form.hidden_field :tags, :value => @content.all_tags_but(@content_params['tag'].strip) %>
  <%= form.submit 'x', :class => 'remove' %>
<% end -%>
