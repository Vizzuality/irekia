<%
  @follow        = follow if defined?(follow)
  @follow_parent = follow_parent if defined?(follow_parent)
%>

<%= form_for [@follow_parent, @follow], :remote => true, :html => {:'data-type' => 'html', :class => "follow_ribbon", :id => nil } do |form| %>
  <%= hidden_field_tag :form_type, 'ribbon', :id => nil %>
  <%= form.hidden_field :follow_item_id, :id => nil %>
  <%= form.hidden_field :follow_item_type, :id => nil %>
  <%= form.submit_with_login '', :class => 'ribbon add_person add_to_favorites', :'data-label' => t(".#{@follow.follow_item_type.downcase}"), :'data-item-id' => @follow_parent.id %>
<% end -%>
