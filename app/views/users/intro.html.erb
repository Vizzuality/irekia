  <div class="inner-cycle">
    <form action="" method="get" novalidate>
      <article class="thin signup">
      <div class="inner">
        <div class="content">

          <h1><%= t('.new_in_irekia') %></h1>
          <p><%= t('.use_facebook_or_twitter') %></p>

          <div class="social-links">
