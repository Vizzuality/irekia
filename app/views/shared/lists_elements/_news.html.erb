<%= avatar data.area %>
<div class="content">
  <p><strong><%= link_to translate_field(data, 'title'), news_path(data.slug) %></strong></p>
  <p class="excerpt"><%=  raw(truncate(strip_tags(translate_field(data, 'body').try(:strip)), :length => 70))  %></p>
  <div class="footer">
    <span class="published_at">
      <%= raw t('.author', :time => distance_of_time_in_words_to_now(data.published_at)) %>
    </span>
    <% unless show_last_comments?(data) -%>
      &middot;
      <span class="comments"><%= link_to data.comments_count, news_path(data.slug), :class => "comment-count" %></span>
    <% end -%>
  </div>
  <%= render 'shared/lists_elements/last_comments', :data => data %>
</div>
