<% if audios.present? || videos.present? || files.present? -%>
  <h3><%= t(".downloads") %></h3>

<ul class="tabs">
  <li class="first active"><a href="#tab-audio"><%= t(".audio") %></a></li>
  <li><a href="#tab-video"><%= t(".video") %></a></li>
  <li class="last"><a href="#tab-documents"><%= t(".documents") %></a></li>
</ul>

<div class="pill-content">
<% if audios.present? -%>
  <div class="active" id="tab-audio">
    <ul class="playlist">
      <% audios.each do |audio| -%>
        <li class="clearfix">
          <div class="icon"></div>
          <a href="<%= audio.url %>" alt="<%= audio.name %>"><%= truncate(audio.name, :length => 30) %></a>
          <span class="footer"><%= audio.size %></span>
        </li>
      <% end -%>
    </ul>
  </div>
<% else -%>
  <div class="active" id="tab-audio"><%= t(".no_audios") %></div>
<% end -%>

<% if videos.present? -%>
  <div id="tab-video">
    <ul>
      <% videos.each do |video| -%>
        <li class="clearfix">
          <div class="icon"></div>
          <a href="<%= video.url %>" alt="<%= video.name %>"><%= truncate(video.name, :length => 30) %></a>
          <span class="footer"><%= video.size %></span>
        </li>
      <% end -%>
    </ul>

  </div>
<% else -%>
  <div id="tab-video"><%= t(".no_videos") %></div>
<% end -%>

<% if files.present? -%>
  <div id="tab-documents">
    <ul>
      <% files.each do |file| -%>
        <li class="clearfix">
          <div class="icon pdf"></div>
          <a href="<%= file.url %>" alt="file.name"><%= truncate(file.name, :length => 30) %></a>
          <span class="footer"><%= [file.file_type, file.size].compact.join(', ') %></span>
        </li>
      <% end -%>
    </ul>
  </div>
<% else -%>
  <div id="tab-documents"><%= t(".no_documents") %></div>
<% end -%>
</div>

