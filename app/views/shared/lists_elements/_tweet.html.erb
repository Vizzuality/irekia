<%= avatar data.author %>
<div class="content">
  <p class="excerpt"><%= link_to data.message, tweet_path(data.id) %></p>
  <div class="footer">
    <span class="published_at">
      <%= raw t('.author', :author => link_to(data.author.fullname, path_for_user(data.author)), :time => distance_of_time_in_words_to_now(data.published_at)) %>
    </span>
    <% unless show_last_comments?(data) -%>
    &middot;
    <span class="comments"><%= link_to data.comments_count, tweet_path(data.id), :class => "comment-count" %></span>
    <% end -%>
    &middot;
    <%= render "/shared/inline_sharing" %>
  </div>
  <%= render 'shared/lists_elements/last_comments', :data => data %>
</div>
