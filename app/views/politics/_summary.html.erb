<div id="politic_summary">
  <h1><%= @politic.name %></h1>
  <span class="title"><%= raw t('.title', :title => translates_model_value(@politic.title, :name), :areas => @politic.areas.map{|a| link_to a.name, area_path(a)}.join(',')) %></span>
  <div class="description">
    <h3><%= t('.description.title') %></h3>
    <%= simple_format(@politic.description) %>
  </div>
  <div class="actions">
    <span><%= t('.actions.this_week', :count => @politic.actions.count) %></span>
    <%= link_to t('.actions.follow', :name => @politic.first_name) %>
  </div>
  <div class="questions">
    <span><%= t('.questions.answered', :count => @politic.answers.count) %></span>
    <%= link_to t('.questions.ask', :name => @politic.first_name) %>
  </div>
  <% if user_signed_in? %>
    <div class="make_a_question">
      <%= form_for current_user do |form| %>
        <%= form.fields_for :questions, @question do |questions| %>
          <%= questions.fields_for :question_data, @question_data do |question_data| %>
            <%= question_data.hidden_field :user_id %>
            <%= question_data.text_field :question_text %>
          <% end %>
        <% end %>
        <%= form.submit t('.make_a_question.submit') %>
      <% end %>
    </div>
    <% if flash[:notice] %>
      <% if flash[:notice] == :question_created %>
        <div class="question_sent">
          <p class="title"><%= t('.question_sent.success') %></p>
          <p><%= raw t('.question_sent.waiting_moderation', :review_link => link_to(t('.question_sent.review_link'), '#')) %></p>
        </div>
      <% elsif flash[:notice] == :question_failed %>
        <div class="question_failed">
          <p class="title"><%= t('.question_sent.fail') %></p>
          <p></p>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>