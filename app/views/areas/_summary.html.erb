<div id="area_summary">
  <h1><%= @area.name %></h1>
  <%= link_to '', '#', :class => 'add_to_favorites' %>
  <div class="description">
    <h3><%= t('.description.title') %></h3>
    <%= simple_format(@area.description) %>
  </div>
  <div class="team">
    <h3><%= t('.team.title') %></h3>
    <ul>
      <% @team.first(2).each do |user| %>
        <li>
          <%= link_to image_tag(user.profile_image_thumb_url), politic_path(user) if user.profile_image_thumb_url %>
          <%= link_to user.name, politic_path(user) %>
          <span><%= translates_model_value(user.title, :name) if user.title %></span>
        </li>
      <% end %>
      <% if @team.to_a.from(2).present? %>
        <li><%= link_to t('.team.other_members', :count => @team.to_a.from(2).length), team_area_path(@area) %></li>
      <% end %>
    </ul>
  </div>
  <div class="status">
    <ul>
      <li class="area">
        <span><%= t('.status.area.actions_this_week', :count => @actions.this_week.count) %></span>
        <%= link_to t('.status.area.follow_this_area') %>
      </li>
      <li class="questions">
        <span><%= t('.status.questions.answered', :count => @area.questions.answered.count) %></span>
        <%= link_to t('.status.questions.make_a_question') %>
      </li>
      <li class="proposals">
        <span><%= t('.status.proposals.open', :count => @area.proposals.open.count) %></span>
        <%= link_to t('.status.proposals.make_a_proposal') %>
      </li>
    </ul>
  </div>
</div>
