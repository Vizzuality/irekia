<% if @participation.content.percent_in_favor >= 50 -%>
<%= content_tag :span, t(".in_favor", :percentage => @participation.content.percent_in_favor, :count => @participation.content.participation), :class => :in_favor %>
<% else -%>
<%= content_tag :span, t(".against", :percentage => @participation.content.percent_against, :count => @participation.content.participation), :class => :against %>
<% end -%>
<div class="footer">
  <%= form_for @participation, :remote => true do |form| %>
    <%= form.hidden_field :id %>
    <%= form.hidden_field :content_id %>
    <%= form.hidden_field :user_id %>
    <div class="input_text">
      <%= form.fields_for :vote_data do |vote_data_form| %>
        <%= vote_data_form.hidden_field :id, :value => '' %>
        <%= vote_data_form.hidden_field :in_favor, :value => false %>
      <% end -%>
      <%= button_with_login 'Estoy en contra', :class => "white_button against#{' selected' unless @participation.new_record? || @participation.in_favor }" %>
    </div>
  <% end -%>
</div>
