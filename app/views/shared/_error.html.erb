<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title><%= t(".title") %></title>
  <meta name="description" content="">
  <meta name="author" content="">
  <meta name="viewport" content="width=1020,initial-scale=1">
  <%= stylesheet_link_tag "style" %>
  <script src="/javascripts/libs/modernizr-2.0.6.min.js"></script>
  <%= csrf_meta_tag %>
</head>

<body>
  <div id="container">
    <div id="main">
      <div class="content page_error">
        <div class="article thin with_footer">
          <div class="inner">
            <%= image_tag 'icons/error.png' %>
            <h1><%= t(".error_title") %></h1>
          </div>
          <div class="bfooter">
          <div class="separator"></div>
          <div class="inner">
            <div class="left">
              <a href="/" class="margin_left left_arrow"><%= t(".home_page") %></a>
            </div>
          </div>
          </div>
          <div class="t"></div><div class="f"></div>
        </div>
      </div>
    </div>
    <footer><%= render 'shared/footer' %></footer>
  </div>
</body>
