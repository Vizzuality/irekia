<div id="sign_in"<%= " class='error'" if flash and flash[:alert] %>>
  <div class="content">
    <h1><%= t('.access_irekia') %></h1>
    <p><%= t('.forgotten_password') %> <%= link_to t('.get_it_here'), new_password_path('user') %></p>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:novalidate => "novalidate"}) do |f| %>

      <p<%= " class='error'" if flash and flash[:alert] %>><%= f.label :email %> <%= content_tag 'span', flash[:alert] if flash %> <%= f.email_field :email, :class => :mInput %>
      <p<%= " class='error'" if flash and flash[:alert] %>><%= f.label :password %> <%= f.password_field :password, :class => :mInput %></p>
      <p class="remember_me"><%= f.check_box :remember_me, :class => "hidden" %> <a class="checkbox">Recordar mis datos</a></p>

      <footer>
      <div class="left">
        <%= link_to t('.facebook_signin'), user_omniauth_authorize_path(:facebook), :id => :facebook_signin, :class => :facebook %>
        <%= link_to t('.twitter_signin'), user_omniauth_authorize_path(:twitter), :id => :twitter_signin, :class => :twitter %>
      </div>
      <div class="right">
        <%= f.submit t('.sign_in'), :class => "right white_button " %>
      </div>
      </footer>
    <% end %>
  </div>
</div>
