<article class="questions with_filters broken-bottom">
<div class="inner">
  <header>
  <div class="left">
    <h2><%= t(".without_answer_title", :count => @questions_top_count) %></h2>
  </div>
  <div class="right">

    <ul class="switch">
      <li class="selected"><%= link_to t('.more_recent'), link_for_questions(:referer => 'answered'), :class => 'filter' %></li>
      <li><%= link_to t('.more_polemic'), link_for_questions(:more_polemic => true, :referer => 'answered'), :class => 'filter' %></li>
    </ul>

  </div>
  </header>
  <div class="left">
    <div id="listing">
      <%= render 'shared/questions_list', :questions => @questions_top %>
    </div>
  </div>
  <div class="right">
  </div>
</div>
<div class="t"></div><div class="f"></div>
</article>

