<% if user.profile_pictures.present? %>
  <%= link_to (image_tag user.profile_image, :class => "avatar#{ ' ' + size.to_s if size }"), path, :title => user.fullname %>
<% else %>
  <%= link_to (image_tag 'icons/faceless_avatar.png', :class => "avatar#{ ' ' + size.to_s if size }"), path, :title => user.fullname  %>
<% end %>
