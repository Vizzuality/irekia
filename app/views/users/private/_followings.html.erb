<article class="with_footer">
<div class="inner">
  <header>
  <h2><%= t('.title') %></h2>
  </header>
  <div class="content">
    <ul class="suggestions">
      <% @areas_following.each do |area| %>
        <li class="selected">
          <%= link_to (image_tag 'icons/news_avatar_medium.png'), area_path(area), :title => area.name, :class => :avatar %>
          <div class="content">
            <%= link_to area.name, area_path(area), :class => :name %>
            <p><%= t('.area') %></p>
            <div class="follow basic">
            <%= render 'follows/destroy_form', :follow => @areas_follows[area.id], :follow_parent => @user, :button_class => '' %>
            <div>
          </div>
        </li>
      <% end %>
      <% if @areas_following.present? && @users_following.present? -%>
        <hr/>
      <% end -%>
      <% @users_following.each do |user| %>
        <li class="selected">
          <%= link_to avatar(user), user_path(user) %>
          <div class="content">
            <%= link_to user.fullname, politician_path(user), :class => :name %>
            <p>
              <%= t('.title_and_area', :title => get_politician_title(user), :area => user.areas.map(&:name).to_sentence) %>
            </p>
            <div class="follow basic"><%= render 'follows/destroy_form', :follow => @users_follows[user.id], :follow_parent => @user, :button_class => '' %></div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<footer>
<div class="separator"></div>
<div class="inner">
  <div class="left">
    <%= link_to t('.all_profiles'), '/in_development', :class => "down_arrow" %>
  </div>
</div>
</footer>
<div class="t"></div><div class="f"></div>
</article>
