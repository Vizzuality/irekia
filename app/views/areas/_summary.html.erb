<!-- Article -->
<article class="summary">
<div class="inner">
  <div class="content">
    <header>
    <h1><%= @area.name %></h1>
    </header>
    <div class="left">
      <h3><%= t('.description.title') %></h3>

      <div class="description two_columns">
        <%= simple_format(@area.description) %>
        <p>
          <% if @new_follow -%>
            <%= form_for @area do |form| %>
              <%= form.fields_for :follows, @new_follow do |follows_form| %>
                <%= follows_form.hidden_field :user_id %>
                <%= follows_form.hidden_field :follow_item_id %>
                <%= follows_form.hidden_field :follow_item_type %>
              <% end -%>
              <%= content_tag :button, :type => 'submit', :class => 'white_button add_person add_to_favorites' do %>
                <%= raw (content_tag(:span, '', :class => 'add') + t('.description.follow', :count => @followers_count)) %>
              <% end -%>
            <% end -%>
          <% elsif @remove_follow -%>
            <%= form_for @area do |form| %>
              <%= form.fields_for :follows, @remove_follow do |follows_form| %>
                <%= follows_form.hidden_field :user_id %>
                <%= follows_form.hidden_field :follow_item_id %>
                <%= follows_form.hidden_field :follow_item_type %>
                <%= follows_form.hidden_field :_destroy, :value => true %>
              <% end -%>
              <%= content_tag :button, :type => 'submit', :class => 'white_button add_person add_to_favorites' do %>
                <%= raw (content_tag(:span, '', :class => 'add') + t('.description.stop_follow')) %>
              <% end -%>
            <% end -%>
          <% end -%>
        </p>
      </div>

    </div>
    <div class="right">
      <ul class="people">

        <% @team.first(2).each do |user| %>
          <li>

          <%= avatar(user, :small) %>
          <%#= link_to (content_tag 'div', image_tag(user.profile_image), :class => "avatar small"), politician_path(user) if user.profile_image %>
          <%= link_to user.fullname, politician_path(user), :class => :name %>
          <span><%= get_politician_title(user) %></span>
          </li>
        <% end %>

        <% if @team.to_a.from(2).present? %>
          <li class="more">
          <%= link_to (content_tag 'div', (image_tag 'icons/more_people_avatar.png'), :class => "avatar small"), "#" %>
          <%= link_to t('.team.other_members', :count => @team.to_a.from(2).length), team_area_path(@area), :class => :name %>
          </li>
        <% end %>

      </ul>
    </div>
  </div>
</div>
<%= link_to "", "#", {:class => :ribbon} %>
<div class="t"></div><div class="f"></div>
</article>
<!-- /Article -->



