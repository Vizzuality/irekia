<ul class="results">
  <% if has_politicians? %>
    <li class="politicians">
      <div class="summary"><h3><%= t('.politicians.summary.title') %></h3><%= link_to t('.politicians.summary.count', :count => @politicians.count), politicians_search_path(search_params) %></div>
    <ul>
      <% @politicians.first(2).each do |politician| %>
        <li>
        <%= link_to (content_tag 'div', (image_tag(politician.profile_image)), :class => "avatar medium"), path_for_user(politician) if politician.profile_image %>
        <%= link_to politician.fullname, path_for_user(politician), :class => :name %>
        <% if title = get_politician_title(politician) %>
          <span class="position"><%= t('.politicians.title_area', :title => title, :area => politician.areas.map(&:name).join(', ')) %></span>
        <% end %>
        </li>
      <% end %>
    </ul>
    </li>
  <% end %>

  <% if has_areas? %>
    <li class="areas2 clearfix<%= ' no-border' if !has_politicians? %>">
    <div class="summary"><h3><%= t('.areas.summary.title') %></h3></div>
    <ul>
      <% @areas_found.first(2).each do |area| %>
        <li>
        <a href="#" class="avatar medium"><img src="/images/icons/news_avatar_medium.png" /></a>
        <%= link_to area.name, area_path(area), :class => :name %>
        <span class="position">&nbsp;</span>
        </li>
      <% end %>
    </ul>
    </li>
  <% end %>

  <% if has_citizens? %>
    <li class="users clearfix<%= ' no-border' if !has_politicians? && !has_areas? %>">
    <div class="summary"><h3><%= t('.users.summary.title') %></h3><%= link_to t('.users.summary.count', :count => @citizens.count), citizens_search_path(search_params) %></div>
    <ul>
      <% @citizens.first(2).each do |user| %>
        <li>
        <%= link_to (content_tag 'div', (image_tag(user.profile_image)), :class => "avatar medium"), path_for_user(user) if user.profile_image %>
        <%= link_to user.fullname, path_for_user(user), :class => :name %>
        <span class="position"><%= "#{user.city}, #{user.province}" %></span>
        </li>
      <% end %>
    </ul>
    </li>
  <% end %>

  <% if has_contents? %>
    <li class="contents clearfix<%= ' no-border' if !has_politicians? && !has_areas? && !has_citizens? %>">
    <div class="summary"><h3><%= t('.contents.summary.title') %></h3></div>
    <%= link_to t('.contents.count', :count => @contents.count), contents_search_path(search_params) %>
    </li>
  <% end %>
</ul>
