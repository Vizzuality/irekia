<div id="team">
  <h1><%= t('.title', :count => @team.count) %></h1>
  <ul>
    <% @team.each do |user| %>
    <li>
      <%= link_to image_tag(user.profile_image), politic_path(user) if user.profile_image %>
      <%= link_to user.name, politic_path(user) %>
      <span class="title"><%= get_politic_title(user) %></span>
      <% if user.active? %>
      <span class="actions_this_week"><%= t('.actions_this_week', :count => user.actions.this_week.count) %></span>
      <% else %>
      <span class="inactive"><%= t('.inactive') %></span>
      <% end %>
    </li>
    <% end %>
  </ul>
</div>