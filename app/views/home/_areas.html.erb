<ul>
  <% @areas.first(9).each_with_index do |area,i| %>
    <li class="<% if ((i+1) % 3) == 0 %>last<% end %>  <% if ((i+1) % 3) == 1 %>first<% end %>">
      <div class="avatar">
        <%= avatar(area) %>
      </div>
      <div class="info">
        <h3><a href="/area/<%= area.id %>"><%= area.name %></a></h3>
        <span class="total"><a href="#">2 preguntas</a> y <a href="#">3 propuestas</a></p>
      </div>
    </li>
  <% end %>
</ul>

