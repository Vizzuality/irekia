<div class="article thin with_footer with_form signup step1">
  <%= form_for @user, { :url => preregister_users_path, :remote => true, :html => { :novalidate => :novalidate, "data-type" => :html }} do |f| %>
  <div class="inner clearfix">
    <div class="content">

      <h1><%= t('.new_in_irekia') %></h1>
      <p><%= t('.fill_in_your_data') %></p>

      <fieldset>
        <div class="field email">
          <%= f.label :email %>
          <div class="error_field"></div>
          <div class="input_field">
            <%= f.email_field :email, :autocomplete => :off %>
          </div>
        </div>

        <div class="field password clearfix">
          <%= f.label :password_twice, :class => :long %>
          <div class="error_field"></div>
          <div class="input_field left">
            <%= f.password_field :password, :autocomplete => :off %>
          </div>
          <div class="input_field right">
            <%= f.password_field :password_confirmation, :autocomplete => :off %>
          </div>
        </div>

        <div class="field legal">
          <p class="terms_of_service"><%= f.check_box :terms_of_service, :class => :hidden %> <a class="checkbox big"><%= raw(t('.terms_of_service', :link => link_to(t('.terms_of_service_link'), use_conditions_path))) %></a></p>
        </div>
      </fieldset>

    </div>
  </div>

  <div class="bfooter">
  <div class="separator"></div>
  <div class="inner">
    <div class="center">
      <%= button t('.sign_up'), :class => 'white_button pink center advance' %>
    </div>
  </div>
  </div>
  <div class="t"></div><div class="f"></div>

<% end -%>

</div>

