<%
  @follow        = follow if defined?(follow)
  @follow_parent = follow_parent if defined?(follow_parent)
%>

<%= form_for [@follow_parent, @follow], :remote => true, :html => {:'data-type' => 'html', :class => "follow_ribbon" } do |form| %>
  <%= hidden_field_tag :form_type, 'ribbon' %>
  <%= form.hidden_field :follow_item_id %>
  <%= form.hidden_field :follow_item_type %>
  <%= form.submit '', :class => 'ribbon add_person add_to_favorites', :'data-item-id' => @follow_parent.id %>
<% end -%>
