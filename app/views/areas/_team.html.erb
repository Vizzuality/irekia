<h1><%= t('.title', :count => @team.count) %></h1>
<ul>
  <% @team.each do |user| %>
  <li>
    <%= link_to user.name, politic_path(user) %>
    <span class="title"><%= translates_model_value(user.title, :name) if user.title %></span>
    <span class="actions_this_week"><%= t('.actions_this_week', :count => user.actions.this_week.count) %></span>
  </li>
  <% end %>
</ul>