<%= form_for @content, :remote => true, :html => {:'data-type' => 'html', :class => :remove} do |form| %>
  <%= form.fields_for :areas_contents, @content.all_areas_but(@content_params[:areas_contents_attributes]['0'][:area_id]) do |areas_contents| %>
    <%= areas_contents.hidden_field :area_id %>
  <% end -%>
  <%= form.submit 'x', :class => 'remove' %>
<% end -%>
