<%= form_for [@follow_parent, @follow] do |form| %>
  <%= form.hidden_field :user_id %>
  <%= form.hidden_field :follow_item_id %>
  <%= form.hidden_field :follow_item_type %>
  <%= content_tag :button, :type => 'submit', :class => 'white_button add_person add_to_favorites' do %>
    <%= raw (content_tag(:span, '', :class => 'add') + t(".#{@follow_parent.class.name.downcase}.follow", :name => @follow_parent.name, :count => @followers_count)) %>
  <% end -%>
<% end -%>
