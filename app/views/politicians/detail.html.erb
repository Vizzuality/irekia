
<div class="article detail with_footer">
  <div class="inner">
    <div class="avatar_box">
      <%= avatar @politician, :big %>
      <div class="frame"></div>
    </div>
    <div class="left">
      <header class="clearfix">
      <h1><%= @politician.fullname %></h1>
      <p class="position">
      <%= raw t('.title', :title => get_politician_title(@politician), :areas => @politician.areas.map{|area| link_to area.name, area_path(area)}.join(', ')) %>
      </p>
      </header>
      <div class="margin30">
        <h3><%= t(".description.title") %></h3>
        <%= simple_format @politician.description_1 %>
        <%= simple_format @politician.description_2 %>
      </div>
      <div class="margin30">
        <h3><%= t(".description.activity") %></h3>
        <ul class="stats">
          <li>
          <div class="top">
            <h5><%= @actions %></h5>
            <label><%= t(".stats.actions") %></label>
          </div>
          <div class="bottom">
            <p><%= t(".stats.week", :count => @actions_this_week) %></p>
          </div>
          </li>
          <li>
          <div class="top">
            <h5><%= @questions_answered %></h5>
            <label><%= t(".stats.questions") %></label>
          </div>
          <div class="bottom">
            <p><%= t(".stats.respond", :time => @time_to_answer) %></p>
          </div>
          </li>
          <li>
          <div class="top">
            <h5><%= @comments_in_proposals %></h5>
            <label><%= t(".stats.comments") %></label>
          </div>
          <div class="bottom">
            <p><%= t(".stats.week", :count => @comments_in_proposals_this_week) %></p>
          </div>
          </li>
        </ul>
      </div>
      <div class="margin30 contact">
        <h3><%= t(".description.contact") %></h3>
        <%= politician_address %>
        <%= politician_mail_and_phone %>
        <%= politician_twitter_and_facebook %>
        <% @politician.webs.split('|').each do |web| -%>
          <%= content_tag :p, link_to(web, web) %>
        <% end -%>
      </div>
    </div>
  </div>
  <!-- content footer -->
  <div class="bfooter">
    <div class="separator"></div>
    <div class="inner">
      <div class="left">
        <%= link_to t(".back"), "javascript: history.go(-1)", :class => :left_arrow %>
      </div>
    </div>
  </div>

  <% if @follow.new_record? -%>
    <%= render 'follows/create_ribbon' %>
  <% else -%>
    <%= render 'follows/destroy_ribbon' %>
  <% end -%>
  <div class="t"></div><div class="f"></div>
</div>
