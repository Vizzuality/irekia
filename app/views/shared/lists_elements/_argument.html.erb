<% position = data.percent_in_favor >= data.percent_against ? "in_favor" : "against" %>

<%= link_to raw("<strong>#{data.percentage}<span class='percentage'>%</span></strong><span>#{t("." + position )}</span>"), proposal_path(data.content_id), :class => "icon #{ position }" %>
<div class="content">

  <p>
    <%= raw t('.title', :proposal => content_tag('strong', link_to(%Q{"#{data.title}"}, proposal_path(data.content_id)))) %>
  </p>

  <div class="footer">
    <span class="author">
      <%= raw t('.author', :time => distance_of_time_in_words_to_now(data.published_at)) %>
    </span>
    &middot;
    <span class="comments"><%= link_to data.comments_count, proposal_path(data.content_id, :anchor => :comments), :class => "participants-count" %></span>
    &middot;
    <%= t('.votes', :count => data.participation) %>
    &middot;
    <%= render "/shared/inline_sharing" %>
  </div>

</div>
