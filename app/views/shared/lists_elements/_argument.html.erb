<% position = data.proposal.percent_in_favor >= data.proposal.percent_against ? "in_favor" : "against" %>

<%= link_to raw("<strong>#{data.proposal.percentage}<span class='percentage'>%</span></strong><span>#{t("." + position )}</span>"), proposal_path(data.proposal.id), :class => "icon #{ position }" %>
<div class="content">

  <p>
    <%= raw t('.title', :proposal => content_tag('strong', link_to(%Q{"#{data.proposal.title}"}, proposal_path(data.proposal.id)))) %>
  </p>

  <div class="footer">
    <span class="author">
      <%= raw t('.author', :time => distance_of_time_in_words_to_now(data.published_at)) %>
    </span>
    <% unless show_last_comments?(data.proposal) -%>
    &middot;
    <%= link_to t('shared.lists_elements.comments', :count => data.proposal.comments_count), proposal_path(data.proposal.id, :anchor => :comments), :class => "participants-count" %>
    <% end -%>
    &middot;
    <%= t('.votes', :count => data.proposal.participation) %>
    &middot;
    <%= render "/shared/inline_sharing" %>
  </div>
  <ul class="<%= data.in_favor ? 'in_favor' : 'against' %>">
    <li><%= data.reason %></li>
  </ul>
  <%= render 'shared/lists_elements/last_comments', :data => data.proposal %>
</div>
