<%
  @actions_description = if viewing_dashboard?
    i18n_scope = 'users.private.show.activity'
    t('subtitle', :link => link_to(t('profiles_or_areas_following', :scope => i18n_scope), followings_user_path(@user, :anchor => :followings )), :scope => i18n_scope)
  end
-%>

<% content_for :header do %>
  <header>
  <%= avatar_image current_user %>
  <h2><%= current_user.name %></h2>
  <%= link_to 'Editar', destroy_user_session_path, :method => 'delete', :class => "icon settings" %>
  </header>
<% end %>

<div id="main" class="<%= controller_name %> <%= action_name %>">
  <div class="content">

    <ul class="menu">
      <li><a href="#" class="checkin">checkin</a></li>
      <li><a href="#" class="comment">publicación</a></li>
      <li><a href="#" class="photo">foto/vídeo</a></li>
    </ul>

<% if @actions.present? %>
	<%= render "shared/actions", :title => t(viewing_dashboard?? 'show.activity.title' : 'actions.title', :scope => "users.#{@viewing_access}"), :description => @actions_description %>
<% else %>

    <div class="article">
      <div class="inner">
        <div class="content">

          <ul class="counters">
          <li><strong><%= current_user.questions_count %></strong>preguntas<br />por contestar</li>
            <li><strong>06</strong>contenidos comentados</li>
            <li><strong>11</strong>nuevas etiquetas</li>
          </ul>

          <ul><li>

<div class="content">
  <span class="empty"><%= t((@area || @user).class.name.downcase, :scope => 'shared.actions.no_content', :target => (@area || @user).name ) %></span>
  </div>
  </li></ul>

        </div>
      </div>
      <div class="t"></div><div class="f"></div>
    </div>

    <div class="loader">
      <a href="#" class="reload">Recargar página</a>
    </div>

<% end %>

  </div>
</div>
