<!-- Article -->
<article class="summary">
<div class="inner">
  <div class="content">
    <header>
    <h1><%= @area.name %></h1>
    </header>
    <div class="left">
      <h3><%= t('.description.title') %></h3>

      <div class="description two_columns">
        <%= simple_format(@area.description) %>
        <p><%= link_to raw( "<span class='add'></span>") +"Seguir este Ã¡rea (122)", "#", :class => "white_button add_person add_to_favorites" %></p>
      </div>

    </div>
    <div class="right">
      <ul class="people">

        <% @team.first(2).each do |user| %>
          <li>
          <%= link_to (content_tag 'div', image_tag(user.profile_image), :class => "avatar small"), politic_path(user) if user.profile_image %>
          <%= link_to user.fullname, politic_path(user), :class => :name %>
          <span><%= get_politic_title(user) %></span>
          </li>
        <% end %>

        <% if @team.to_a.from(2).present? %>
          <li class="more">
          <%= link_to (content_tag 'div', (image_tag 'icons/more_people_avatar.png'), :class => "avatar small"), "#" %>
          <%= link_to t('.team.other_members', :count => @team.to_a.from(2).length), team_area_path(@area), :class => :name %>
          </li>
        <% end %>

      </ul>
    </div>
  </div>
</div>
<%= link_to "", "#", {:class => :ribbon} %>
<div class="t"></div><div class="f"></div>
</article>
