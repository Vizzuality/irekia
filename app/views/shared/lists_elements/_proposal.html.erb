<%
  percentage = data.percent_in_favor
  percentage = data.percent_against if data.percent_in_favor < data.percent_against
%>

<%= link_to raw("<strong>#{percentage}<span class='percentage'>%</span></strong><span>a favor</span>"), proposal_path(data.id), :class => "icon #{ data.arguments.moderated.in_favor.count > data.arguments.moderated.against.count ? "in_favor" : "against" }" %>
<div class="content">

  <p><strong><%= data.title %></strong></p>

  <div class="footer">
    <span class="author">
      <%= raw t('.author', :author => link_to(data.author.fullname, user_path(data.author.id)), :time => distance_of_time_in_words_to_now(data.published_at)) %>
    </span>
    &middot;
    <%= link_to t('shared.lists_elements.comments', :count => data.comments_count), proposal_path(data.id, :anchor => :comments), :class => "participants-count" %>
    &middot;
    <%= t('.votes', :count => data.moderated_participation) %>
    &middot;
    <%= render "/shared/inline_sharing" %>
  </div>
  <%= render 'shared/lists_elements/last_comments', :data => data %>
</div>
