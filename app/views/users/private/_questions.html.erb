<% if @questions_done_count <= 0 -%>
  <div class="article help">
    <div class="inner">
      <div class="content centered clearfix">
        <div class="info icon"></div>
        <h2><%= t('.no_questions.title') %></h2>
        <div class="message">
          <p><%= t('.no_questions.description') %></p>
          <%= link_to_with_login (content_tag :span, t('.no_questions.create_question')), '#', :class => "white_button pink publish_question user_publish" %>
        </div>
      </div>
    </div>
    <div class="t"></div><div class="f"></div>
  </div>

  <%= render "/shared/question_form" %>
<% else -%>

  <div id="questions" class="article questions with_filters">
    <div class="inner">
      <header class="clearfix">
      <div class="left">
        <h2><%= t(".title", :count => @answered_questions_count) %></h2>
      </div>
      <div class="right">

        <ul class="switch">
          <li class="selected"><%= link_to t('.more_recent'), link_for_questions(:more_polemic => false, :referer => 'answered'), :class => 'filter' %></li>
          <li><%= link_to t('.more_polemic'), link_for_questions(:more_polemic => true, :referer => 'answered'), :class => 'filter' %></li>
        </ul>

      </div>
      </header>
      <div class="left">
        <div class="listing">
          <%= render 'shared/questions_list', :questions => @questions %>
        </div>
      </div>
      <div class="right">

        <ul class="selector">
          <li class="selected"><%= link_to t('.filters.all'), link_for_questions(:referer => action_name), :class => 'filter' %></li>
          <li><%= link_to t('.filters.answered'), link_for_questions(:answered => true, :referer => action_name), :class => 'filter' %></li>
        </ul>

      </div>
    </div>
    <div class="t"></div><div class="f"></div>
  </div>

<% end -%>
