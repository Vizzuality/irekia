<%= form_for @new_content, :remote => true, :html => {:'data-type' => :html, :'data-success' => t(".success_message")} do |form| %>
  <%= form.hidden_field :type, :value => 'StatusMessage' %>
  <%= hidden_field_tag :share_in_twitter, '1' %>
  <%= hidden_field_tag :share_in_facebook, '1' %>

        <header>
        <%= link_to t(".cancel"), root_path, :class => :white_button %>
        <h2><%= t(".status_message") %></h2>
        <%= form.submit t(".publish_answer"), :class => 'white_button right publish hidden' %>
        </header>

  <%= form.fields_for :status_message_data, @new_content.build_status_message_data do |status_message_data_form| -%>

    <div class="paper">
    <div class="placeholder"><%= t(".write_status_message") %></div>
    <%= status_message_data_form.text_area :message, :class => :toggle_header %>
    </div>
  <% end -%>

  <div class="spinner"><%= image_tag "datalogger/spinner.gif" %></div>

<% end -%>
