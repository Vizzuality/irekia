<%= avatar data.author %>

<div class="content">
  <p><strong><%= data.title %></strong></p>

  <div class="footer">
    <span class="author">
      <%= raw t('.author', :author => link_to(data.author.fullname, user_path(data.author.id)), :time => distance_of_time_in_words_to_now(data.published_at)) %>
    </span>
    &middot;
    <% if data.percent_in_favor > 50 -%>
      <%= t('.votes_in_favor', :percent => data.percent_in_favor, :count => data.participation) %>
    <% else -%>
      <%= t('.votes_against', :percent => data.percent_against, :count => data.participation) %>
    <% end -%>
  </div>
</div>
