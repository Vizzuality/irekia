<h1><%= t('.tell_us_more_about_you') %></h1>
<h4><%= t('.we_want_to_know_you_better') %></h4>

<%= form_for @user do |f| %>
  <p><%= f.label :name %><br />
  <%= f.text_field :name %></p>

  <p><%= f.label :lastname %><br />
  <%= f.text_field :lastname %></p>

  <p><%= f.label :province_id %><br />
  <p><%= f.select :province_id, [['Vizcaya', 1]], :include_blank => true %><br />

  <p><%= f.label :city_id %><br />
  <p><%= f.select :city_id, [['Bilbao', 1]], :include_blank => true %><br />

  <p><%= f.label :birthday %><br />
  <p><%= f.date_select :birthday, :start_year => 1900 %><br />


  <p><%= f.submit t('.continue') %></p>

  <%= link_to t('.with_this_data'), '/in_development' %>

<% end %>

