<article class="proposals with_footer">
<div class="inner">
  <header>
  <div class="left">
  <h2><%= t(".title") %></h2>
  </div>
  <div class="right">

    <ul class="switch">
      <li class="selected"><%= link_to t('.main_filters.more_recent'), '/in_development', :class => 'more_recent' %></li>
      <li><%= link_to t('.main_filters.more_polemic'), '/in_development', :class => 'more_polemic' %></li>
    </ul>

  </div>
  </header>
  <div class="left">
    <ul>
    <% @proposals.first(4).each do |proposal| %>
      <li class="proposal">
        <%= render 'shared/lists_elements/proposal', :data => proposal %>
      </li>
    <% end %>
  </ul>

  </div>
  <div class="right">

    <ul class="selector">
      <li class="selected"><%= link_to "Todas", '/in_development' %></li>
      <li><%= link_to "Propuestas del gobierno", '/in_development' %></li>
      <li><%= link_to "Propuestas ciudadanas", '/in_development' %></li>
    </ul>

    <%= link_to "Crea una propuesta", '/in_development', :id => "question-123", :class => "white_button ask_question" %>

  </div>
</div>
<footer>
<div class="separator"></div>
<div class="inner">

  <div class="right">
    <%= link_to t('.more'), link_for_proposals, :class => "right_arrow" %>
  </div>

</div>
</footer>
<div class="t"></div><div class="f"></div>
</article>
