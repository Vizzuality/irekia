<div class="article total_info">
  <div class="inner">
    <div class="content">
      <%= render 'moderation_info' %>
      <div class="order">
        <span class="move"></span>
        <span class="buttons">
          <a class="recents" href="<%= admin_moderation_path %>">recientes primero</a>
          <a class="olds" href="<%= admin_moderation_path(:oldest_first => true) %>">antiguos primero</a>
        </span>
      </div>
    </div>
  </div>
  <div class="t"></div><div class="f"></div>
</div>

<% if (@items.size>0) %>
<div class="article activity">
  <div class="inner">
    <div class="content">
      <ul>
        <%= render 'admin/moderation/items_list' %>
      </ul>
    </div>
  </div>
  <div class="t"></div><div class="f"></div>
</div>
<% end %>

<span class="no_content" <% if (@items.blank?) %>style="display:block"<% end %>>No hay más contenidos<br/>pendientes de ser<br/>moderados</span>
<span class="loader">Cargando más contenido</span>

<% content_for :js_data do %>
<script>
$(document).ready(function(){

  $(window).scroll(function(ev){
    if (!loading && (($(document).scrollTop() + $(window).height() + (mobile?60:0)) >= $(document).height())) {
      loadMore(page,older_first);
    }
  });
});
</script>

<% end %>
