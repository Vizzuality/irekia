<%= avatar data.author, :small %>

<div class="content">
  <p><strong><%= translate_field(data, 'title').truncate(60) %></strong></p>

  <div class="footer">
    <span class="when">
      <%= raw t('.author', :author => data.author.fullname, :time => distance_of_time_in_words_to_now(data.published_at)) %>
    </span>
    &middot;
    <% if data.percent_in_favor > 50 -%>
      <%= t('.votes_in_favor', :percent => data.percent_in_favor, :count => data.participation) %>
    <% else -%>
      <%= t('.votes_against', :percent => data.percent_against, :count => data.participation) %>
    <% end -%>
  </div>
</div>
