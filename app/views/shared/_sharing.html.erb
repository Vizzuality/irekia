<ul class="sharing">
  <li><div class="<%= class_for_modal_login %> <%= class_for_after_login %>share email"></div>

  <div class="sharebox email">
    <%= form_for @content, :url => send("#{@content_type}_shares_path", @content), :remote => true, :html => {:'data-type' => 'html', :method => :post, :novalidate => 'novalidate'} do |form| %>
      <div class="input_field placeholder">
        <%= hidden_field_tag :provider, :email %>
        <%= hidden_field_tag :email_message, message_for_email(@content) %>
        <%= text_field_tag :email, "", :placeholder => "", :autocomplete => :off  %>
        <span class="holder">Escribe la direcci√≥n de email</span>
      </div>
      <span class="spinner" id="share_via_email"></span>
      <%= form.submit 'Enviar', :class => "share" %>
      <div class="arrow"></div>
    <% end -%>
  </div>
  </li>

  <li>
    <%= link_to '', "https://twitter.com/share?text=#{message_for_twitter(@content)}", :class => 'share twitter' %>
  </li>

  <li>
    <%= link_to '', '#', :name => 'fb_share', :class => 'share facebook', :type => 'icon', :share_url => polymorphic_url(@content) %>
    <script src="http://static.ak.fbcdn.net/connect.php/js/FB.Share" type="text/javascript">
    </script>
  </li>

  <% if @content_type == 'event' %>
    <li>
      <%= link_to '', '/in_development', :class => 'share ical', :type => 'icon' %>
    </li>
  <% end %>

