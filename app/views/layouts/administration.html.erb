<body class="admin">

  <%= render 'shared/sign_in' %>

  <div id="container">
    <header>
      <%= render 'shared/header' %>
    <nav>
      <%= render 'shared/nav_bar' %>
    </nav>
    </header>

    <div id="main" class="<%= controller.controller_name %> <%= controller.action_name %> role="main">
      <div class="content">
        <div class"article" style="display:none">
        <div class="inner">
          <div class="content">
            <div class="left">
                <%= render 'admin/shared/navigation' %>
            </div>
            <div class="right"> </div>
          </div>
        </div>
        <div class="t"></div><div class="f"></div>
        </div>
        <%= yield %>

        <%= render 'shared/floating_login' %>
      </div>
    </div>

    <footer> <%= render 'shared/footer' %>
    </footer>
  </div>


  <!-- JavaScript at the bottom for fast page loading -->

  <!-- Grab Google CDN's jQuery, with a protocol relative URL; fall back to local if offline -->
  <script src="http://maps.googleapis.com/maps/api/js?v=3&sensor=false" type="text/javascript"></script>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js"></script>
  <script>window.jQuery || document.write('<script src="/javascripts/libs/jquery-1.6.2.min.js"><\/script>')</script>

    <%= javascript_include_tag 'rails', 'libs/spin.min', 'temp', 'libs/jquery-ui-1.8.16.custom.min', 'libs/jquery.dropkick-1.0.0', 'moderation' %>
    <%= yield :js_data %>



    <!-- Prompt IE 6 users to install Chrome Frame. Remove this if you want to support IE 6.
