<article class="team with_footer">
<div class="inner">
  <header>
  <h2><%= t('.title', :count => @team.count) %></h2>
  </header>
  <div class="content">

    <ul class="suggestions">
      <% @team.each do |user| %>
        <li class="<%= 'selected' unless (follow = (current_user.follow_for_user(user) rescue Follow.new)).new_record? %>">
        <%= avatar user %>
        <div class="content">
          <%= link_to user.fullname, politician_path(user.id), :title => user.fullname, :class => :name %>
          <p class="title"><%= get_politician_title(user) %></p>
          <div class="follow basic clearfix">
          <% if follow.new_record? -%>
            <%= render 'follows/create_form', :follow => follow, :follow_parent => user, :button_class => '', :button_label => t('.follow') %>
          <% else -%>
            <%= render 'follows/destroy_form', :follow => follow, :follow_parent => user, :button_class => '' %>
          <% end -%>
          </div>
        </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<footer>
<div class="separator"></div>
<div class="inner">
  <div class="right">
  </div>
</div>
</footer>
<div class="t"></div><div class="f"></div>
</article>
