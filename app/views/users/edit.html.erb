<article class="thin with_footer with_remark with_form signup">
<%= form_for @user, { :remote => true, :html => { :novalidate => :novalidate, "data-type" => :html }} do |f| %>
  <div class="inner">
    <div class="content">

      <h1><%= t('.tell_us_more_about_you') %></h1>
      <p><%= t('.we_want_to_know_you_better') %></p>

      <fieldset>

        <div class="field name">
          <%= f.label :name %>
          <div class="input_field">
            <%= f.text_field :name, :autocomplete => :off %>
          </div>
          <span class="mandatory">obligatorio</span>
        </div>

        <div class="field lastname">
          <%= f.label :lastname %>
          <div class="input_field">
            <%= f.text_field :lastname, :autocomplete => :off %>
          </div>
          <span class="mandatory">obligatorio</span>
        </div>

        <div class="field territory left">
          <%= f.label :province_id %>
          <div class="input_field">
            <%= f.select :province_id, [['Vizcaya', 1],
              ["Asparrena","Asparrena"],
              ["Aiara","Ayala/Aiara"],
              ["Banos","Baños de Ebro/Mañueta"],
              ["Barrundia","Barrundia"],
              ["Berantevilla","Berantevilla"],
              ["Bernedo","Bernedo"],
              ["Campezo","Campezo/Kanpezu"],
              ["Elburgo","Elburgo/Burgelu"],
              ["Elciego","Elciego"],
              ["Villar","Elvillar/Bilar"],
              ["Ribera_alta","Erriberagoitia/Ribera Alta"],
              ["Arana","Harana/Valle de Arana"],
              ["Oca","Iruña Oka/Iruña de Oca"]],
              :include_blank => false %>
          </div>
        </div>

        <div class="field municipality">
          <%= f.label :city_id %>
          <div class="input_field">
            <%= f.select :city_id,
              [["alegria-dulantzi","Alegría-Dulantzi"],
              ["Umurrio","Amurrio"],
              ["Unana","Añana"],
              ["Uramaio","Aramaio"],
              ["Urminon","Armiñon"],
              ["Urraia","Arraia-Maeztu"],
              ["Urrazua","Arrazua-Ubarrundia"],
              ["Urtziniega","Artziniega"],
              ["Usparrena","Asparrena"],
              ["Uiara","Ayala/Aiara"],
              ["Uanos","Baños de Ebro/Mañueta"],
              ["Uarrundia","Barrundia"],
              ["Uerantevilla","Berantevilla"],
              ["Uernedo","Bernedo"],
              ["Uampezo","Campezo/Kanpezu"],
              ["Ulburgo","Elburgo/Burgelu"],
              ["Ulciego","Elciego"],
              ["Uillar","Elvillar/Bilar"],
              ["Uibera_alta","Erriberagoitia/Ribera Alta"],
              ["Urana","Harana/Valle de Arana"],
              ["Uca","Iruña Oka/Iruña de Oca"],
              ["Ururaiz","Iruraiz-Gauna"],
              ["Uripan","Kripan"],
              ["Uuartango","Kuartango"],
              ["Uabastida","Labastida/Bastida"],
              ["Uagran","Lagrán"],
              ["Uaguardia","Laguardia"],
              ["Uanciego","Lanciego/Lantziego"],
              ["Uantaron","Lantarón"],
              ["Uapuebla","Lapuebla de Labarca"],
              ["Uaudio","Laudio/Llodio"],
              ["Uegutiano","Legutio"],
              ["Ueza","Leza"],
              ["Uoreda","Moreda de Álava"],
              ["Uavaridas","Navaridas"],
              ["Ukondo","Okondo"],
              ["Uion","Oyón-Oion"],
              ["Uenacerrada","Peñacerrada/Urizaharra"],
              ["Uibera_baja","Ribera Baja/Erribera Beitia"],
              ["Ualvatierra","Salvatierra/Agurain"],
              ["Uamaniego","Samaniego"],
              ["Uan_millan","San Millán/Donemiliaga"],
              ["Urkabustaiz","Urkabustaiz"],
              ["Ualdegovia","Valdegovía/Gaubea"],
              ["Uillabuena","Villabuena de Álava/Esku"],
              ["Uasteiz","Vitoria-Gasteiz"],
              ["Uecora","Yécora/Iekora"],
              ["Ualduondo","Zalduondo"],
              ["Uambrana","Zambrana"],
              ["Uigoitia","Zigoitia"],
              ["Uuia","Zuia"]], :prompt => 'Test', :include_blank => false %>
            </div>
          </div>

          <div class="field born_at">
            <%= f.label :birthday %>
            <div class="input_field">
              <%= f.date_select :birthday, :start_year => 1900, :include_blank => false %>
            </div>
          </div>

        </fieldset>

      </div>
    </div>

    <footer>
    <div class="separator"></div>
    <div class="inner">
      <div class="center">
        <%= f.submit t('.continue'), :class => "white_button pink center advance" %>
      </div>
    </div>
    </footer>
    <div class="remark">
      <%= link_to t('.with_this_data'), '/in_development' %><a href="#">
      </div>
      <div class="t"></div><div class="f"></div>
    <% end %>
    </article>

