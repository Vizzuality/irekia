<div class="content">
  <ul class="copyright">
    <li class="logo"><%= image_tag 'eusko_jaurlaritza_logo.png' %></li>
    <li>&copy; 2011 Eusko Jaurlaritza</li>
    <li><%= t(".basque_government") %></li>
  </ul>
  <div class="home">
    <h4><%= t('.home.title') %></h4>
    <ul>
      <li><%= link_to t('.home.agenda'), agenda_path %></li>
      <li><%= link_to t('.home.sign_up'), intro_users_path %></li>
      <li><%= link_to t('.home.rss_all'), root_url(:format => 'rss') %></li>
      <li><%= link_to t('.home.rss_news'), root_url(:type => 'news', :format => 'rss') %></li>
    </ul>
  </div>
  <div class="areas">
    <h4><%= t('.areas.title') %></h4>
    <ul>
      <% @areas_footer.first(6).each do |area| %>
        <li><%= link_to area.name, area %></li>
      <% end %>
    </ul>
    <ul class="last">
      <% @areas_footer.last(5).each do |area| %>
        <li><%= link_to area.name, area %></li>
      <% end %>
    </ul>
  </div>
  <div class="about">
    <h4><%= t('.about.title') %></h4>
    <ul>
      <li><%= link_to t('.about.help.title'), t(".about.help.url") %></li>
      <li><%= link_to t('.about.faq.title'), t(".about.faq.url") %></li>
      <li><%= link_to t('.about.use.title'), t(".about.use.url") %></li>
      <li><%= link_to t('.about.privacy.title'), t(".about.privacy.url")%></li>
    </ul>
  </div>
</div>
