<div class="content">
  <span class="currently_viewing"><%= t('.currently_viewing') %></span>
  <ul class="areas">
    <% @areas.each do |area| %>
      <li class="<%= current_area?(area) %>"><%= truncate(area.name, :length => 18) %></li>
    <% end %>
  </ul>
  <%= form_for :search, :remote => true, :url => search_path, :html => {:'data-type' => 'html', :method => :get, :autocomplete => :off } do |search_form| %>
    <div class="input_field placeholder">
        <%= search_form.text_field :query %>
        <%= search_form.submit '' %>
        <span id="autocomplete_spinner"></span>
        <span class="holder">o busca lo que necesitesâ€¦</span>
    </div>
    <field></field>
    <div class="autocomplete">
      <div class="inner"></div>
      <div class="t"></div><div class="f"></div>
    </div>
  <% end %>
  <% if user_signed_in? %>
    <ul class="auth">
      <li>
        <%= link_to "hola, #{current_user.name}", user_path(current_user), :class => "blue_button" %>
        <%= content_tag 'div', current_user.notifications_count, :class => "pending-counter" if user_signed_in? %>
      </li>
      <li><%= link_to t('.sign_out'), destroy_user_session_path, :method => 'delete', :class => "sign_out blue_button" %></li>
    </ul>
  <% else %>
    <ul class="auth">
      <li><%= link_to t('.sign_up'), intro_users_path, :class => :blue_button %></li>
      <li>
      <div class="blue_button">
        <%= link_to t('.sign_in'), new_user_session_path, :class => :login %>
        <%= link_to t('.facebook'), user_omniauth_authorize_path(:facebook), :class => :facebook %>
        <%= link_to t('.twitter'), user_omniauth_authorize_path(:twitter), :class => :twitter %>
      </div>
      </li>
    </ul>
  <% end %>
</div>
