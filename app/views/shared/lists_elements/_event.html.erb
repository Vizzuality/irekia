<div class="event">
  <p class="title">
  <%= data.title %>
  </p>
  <%= avatar data.author %>
  <span class="author">
    <%= raw t('.author', :author => link_to(data.author.fullname, user_path(data.author.id)), :time => distance_of_time_in_words_to_now(data.published_at)) %>
  </span>
  &middot;
  <%= link_to t('shared.lists_elements.comments', :count => data.comments_count), '#', :class => "comment-count" %>
  &middot;
  <%= render "/shared/inline_sharing" %>
</div>
