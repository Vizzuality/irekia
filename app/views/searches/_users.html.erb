<% if @citizens_count > 0  %>
  <div id="users" class="article results with_footer">
    <div class="inner">
      <header class="clearfix">
      <h2><%= t('.results.title', :count => @citizens_count) %></h2>
      </header>
      <div class="content">
        <ul class="suggestions">
          <% @citizens.each do |user| %>
            <li>
            <%= avatar user %>
            <div class="content">
              <%= link_to user.fullname, path_for_user(user), :class => :name %>
                <p><%= user.location %></p>
              <%= link_to t('.results.follow'), '/in_development' %>
            </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="bfooter">
      <div class="separator"></div>
      <div class="inner">
        <div class="left">
          <% if action_name == 'show' %>
            <% if @citizens_count > 9 %>
              <%= link_to t('.results.all', :count => @citizens_count), citizens_search_path(search_params(:page => @page)), :class => :right_arrow %>
            <% end %>
          <% else %>
            <% if @citizens_count > 9 %>
              <%= link_to t('.results.more'), citizens_search_path(search_params(:page => @page)), :class => :down_arrow %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="t"></div><div class="f"></div>
  </div>
<% end %>
